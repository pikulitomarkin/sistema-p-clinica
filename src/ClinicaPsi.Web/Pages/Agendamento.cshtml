@page
@using ClinicaPsi.Shared.Models
@using Microsoft.AspNetCore.Identity
@inject ClinicaPsi.Application.Services.PsicologoService PsicologoService
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Agende sua Consulta";
    Layout = null;
    
    var psicologos = await PsicologoService.GetAllAsync();
    var psicologosAtivos = psicologos.Where(p => p.Ativo).ToList();
    
    // Se não houver psicólogos cadastrados, usa informações de fallback
    var infoFallback = !psicologosAtivos.Any();
    
    // Verifica se usuário está logado
    var isLoggedIn = SignInManager.IsSignedIn(User);
    
    // Helper function para formatar dias
    string FormatarDias(Psicologo psi) {
        var dias = new List<string>();
        if (psi.AtendeSegunda) dias.Add("Seg");
        if (psi.AtendeTerca) dias.Add("Ter");
        if (psi.AtendeQuarta) dias.Add("Qua");
        if (psi.AtendeQuinta) dias.Add("Qui");
        if (psi.AtendeSexta) dias.Add("Sex");
        if (psi.AtendeSabado) dias.Add("Sáb");
        if (psi.AtendeDomingo) dias.Add("Dom");
        return string.Join(", ", dias);
    }
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clínica Psii Ana Santos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .psicologo-card {
            transition: all 0.3s ease;
            cursor: pointer;
            height: 100%;
            border: none !important;
        }
        .psicologo-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0.75rem 2rem rgba(0, 0, 0, 0.2) !important;
        }
        .badge-horario {
            font-size: 0.85rem;
            padding: 0.5rem 1rem;
            font-weight: 500;
        }
        .avatar-circle {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #198754 0%, #20c997 100%);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            border-radius: 15px;
            overflow: hidden;
        }
        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-success">Agende sua Consulta</h1>
            <p class="lead text-muted">Escolha seu psicólogo e horário ideal</p>
        </div>

        @if (infoFallback)
        {
            <!-- Card de Fallback -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body text-center p-5">
                            <div class="avatar-circle rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4">
                                <i class="bi bi-person-circle text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h3 class="mb-3">Dra. Ana Santos</h3>
                            <p class="text-muted mb-1">
                                <i class="bi bi-award me-1"></i> CRP: 08/45168
                            </p>
                            <p class="text-muted mb-3">
                                <i class="bi bi-star-fill me-1"></i> TCC, Psicologia Organizacional
                            </p>
                            <h4 class="text-success mb-4">R$ 150,00 <small class="text-muted fs-6">por sessão</small></h4>
                            
                            <div class="alert alert-info border-0">
                                <h5 class="alert-heading">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Sistema em Configuração
                                </h5>
                                <p class="mb-0">Para agendar sua consulta, entre em contato diretamente:</p>
                            </div>
                            
                            <div class="d-grid gap-3 mt-4">
                                <a href="https://wa.me/5542999369724?text=Olá! Gostaria de agendar uma consulta." 
                                   class="btn btn-success btn-lg" target="_blank">
                                    <i class="bi bi-whatsapp me-2"></i>
                                    Agendar via WhatsApp
                                </a>
                                <a href="mailto:psiianasantos@psiianasantos.com.br" class="btn btn-outline-primary">
                                    <i class="bi bi-envelope me-2"></i>
                                    Enviar E-mail
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Cards dos Psicólogos -->
            <div class="row g-4 mb-5">
                @foreach (var psi in psicologosAtivos)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 psicologo-card" 
                             onclick="@(isLoggedIn ? $"window.location.href='/Cliente/AgendarConsulta?psicologoId={psi.Id}'" : "mostrarModalLogin()")">
                            <div class="card-body">
                                <!-- Avatar e Nome -->
                                <div class="text-center mb-3">
                                    <div class="avatar-circle rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3">
                                        <i class="bi bi-person-circle text-white" style="font-size: 3rem;"></i>
                                    </div>
                                    <h4 class="mb-1">@psi.Nome</h4>
                                    <p class="text-muted small mb-0">
                                        <i class="bi bi-award me-1"></i> CRP: @psi.CRP
                                    </p>
                                </div>

                                <!-- Especialidades -->
                                <div class="mb-3">
                                    <h6 class="text-muted small mb-2">
                                        <i class="bi bi-star-fill text-warning me-1"></i> Especialidades
                                    </h6>
                                    <p class="small mb-0">@psi.Especialidades</p>
                                </div>

                                <!-- Horários -->
                                <div class="mb-3">
                                    <h6 class="text-muted small mb-2">
                                        <i class="bi bi-clock text-primary me-1"></i> Horários
                                    </h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @if (psi.AtendeManha)
                                        {
                                            <span class="badge bg-info badge-horario">
                                                <i class="bi bi-sunrise me-1"></i>
                                                @psi.HorarioInicioManha.ToString(@"hh\:mm") - @psi.HorarioFimManha.ToString(@"hh\:mm")
                                            </span>
                                        }
                                        @if (psi.AtendeTarde)
                                        {
                                            <span class="badge bg-warning badge-horario">
                                                <i class="bi bi-sunset me-1"></i>
                                                @psi.HorarioInicioTarde.ToString(@"hh\:mm") - @psi.HorarioFimTarde.ToString(@"hh\:mm")
                                            </span>
                                        }
                                    </div>
                                </div>

                                <!-- Dias de atendimento -->
                                <div class="mb-3">
                                    <h6 class="text-muted small mb-2">
                                        <i class="bi bi-calendar-week text-success me-1"></i> Dias
                                    </h6>
                                    <p class="small mb-0">@FormatarDias(psi)</p>
                                </div>

                                <!-- Valor -->
                                <div class="text-center pt-3 border-top">
                                    <h4 class="text-success mb-0">@psi.ValorConsulta.ToString("C")</h4>
                                    <small class="text-muted">por sessão</small>
                                </div>

                                <!-- Botão -->
                                <div class="d-grid mt-3">
                                    @if (isLoggedIn)
                                    {
                                        <button class="btn btn-success">
                                            <i class="bi bi-calendar-check me-2"></i>
                                            Agendar Consulta
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-success">
                                            <i class="bi bi-calendar-check me-2"></i>
                                            Selecionar
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Sistema PsicoPontos -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-10">
                <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                    <div class="card-body text-center py-4">
                        <h5 class="text-success mb-3">
                            <i class="bi bi-star-fill me-2"></i>
                            Sistema PsicoPontos
                        </h5>
                        <p class="mb-2">A cada consulta realizada, você ganha <strong>1 PsicoPonto</strong>!</p>
                        <p class="mb-0">
                            <i class="bi bi-gift text-success me-2"></i>
                            Acumule <strong>10 PsicoPontos</strong> e ganhe <strong>1 consulta gratuita</strong>!
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botões de Ação -->
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="d-grid gap-3">
                    @if (!isLoggedIn)
                    {
                        <a href="/Account/Login?returnUrl=/agendamento" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Fazer Login
                        </a>
                        <a href="/Account/Register" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>
                            Criar Conta
                        </a>
                    }
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Voltar para Página Inicial
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Login (se necessário) -->
    <div class="modal fade" id="modalLogin" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Login Necessário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="bi bi-lock text-warning" style="font-size: 3rem;"></i>
                    <p class="mt-3 mb-4">Para agendar uma consulta, você precisa fazer login ou criar uma conta.</p>
                    <div class="d-grid gap-2">
                        <a href="/Account/Login?returnUrl=/agendamento" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Fazer Login
                        </a>
                        <a href="/Account/Register" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>
                            Criar Conta
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function mostrarModalLogin() {
            var modal = new bootstrap.Modal(document.getElementById('modalLogin'));
            modal.show();
        }
    </script>
</body>
</html>
