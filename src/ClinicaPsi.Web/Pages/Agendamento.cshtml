@page
@using ClinicaPsi.Shared.Models
@inject ClinicaPsi.Application.Services.PsicologoService PsicologoService
@{
    ViewData["Title"] = "Agende sua Consulta";
    Layout = null;
    
    var psicologos = await PsicologoService.GetAllAsync();
    // Tenta buscar Ana Santos pelo email, se não encontrar, pega o primeiro ativo
    var drAna = psicologos.FirstOrDefault(p => p.Email == "ana.santos@psii.com") 
                ?? psicologos.FirstOrDefault(p => p.Ativo);
    
    // Informações de fallback caso não haja psicólogo cadastrado
    var infoFallback = drAna == null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dra. Ana Santos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Header -->
                <div class="text-center mb-5">
                    <a href="/" class="text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Voltar para página inicial
                    </a>
                    <h1 class="display-4 fw-bold text-success mt-3">Agende sua Consulta</h1>
                    <p class="lead text-muted">Com a Dra. Ana Santos</p>
                </div>

                <!-- Card do Psicólogo -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-person-circle text-success" style="font-size: 3rem;"></i>
                                </div>
                            </div>
                            <div class="col">
                                <h4 class="mb-1">@(drAna?.Nome ?? "Dra. Ana Santos")</h4>
                                <p class="text-muted mb-1">
                                    <i class="bi bi-award me-1"></i> CRP: @(drAna?.CRP ?? "08/45168")
                                </p>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-star-fill me-1"></i> @(drAna?.Especialidades ?? "TCC, Psicologia Organizacional")
                                </p>
                            </div>
                            <div class="col-auto">
                                <h3 class="text-success mb-0">@((drAna?.ValorConsulta ?? 150m).ToString("C"))</h3>
                                <small class="text-muted">por sessão</small>
                            </div>
                        </div>
                    </div>
                </div>

                    <!-- Card de Informações -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-info-circle text-primary me-2"></i>
                                Como Funciona
                            </h5>
                            <div class="row g-3 mt-2">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-1-circle-fill text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Faça Login ou Cadastre-se</h6>
                                            <small class="text-muted">Entre na sua conta ou crie uma nova</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-2-circle-fill text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Escolha Data e Horário</h6>
                                            <small class="text-muted">Selecione o melhor momento para você</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-3-circle-fill text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Confirme seu Agendamento</h6>
                                            <small class="text-muted">Revise e confirme os dados</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-4-circle-fill text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Receba Confirmação</h6>
                                            <small class="text-muted">Por email e WhatsApp</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <!-- Card de Horários -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-clock text-success me-2"></i>
                            Horários de Atendimento
                        </h5>
                        <div class="row mt-3">
                            @if (drAna?.AtendeManha ?? true)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-primary mb-2">
                                            <i class="bi bi-sunrise me-2"></i>Manhã
                                        </h6>
                                        <p class="mb-0 text-muted">
                                            @((drAna?.HorarioInicioManha ?? new TimeSpan(9, 0, 0)).ToString(@"hh\:mm")) às @((drAna?.HorarioFimManha ?? new TimeSpan(12, 0, 0)).ToString(@"hh\:mm"))
                                        </p>
                                    </div>
                                </div>
                            }
                            @if (drAna?.AtendeTarde ?? true)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-warning mb-2">
                                            <i class="bi bi-sunset me-2"></i>Tarde
                                        </h6>
                                        <p class="mb-0 text-muted">
                                            @((drAna?.HorarioInicioTarde ?? new TimeSpan(14, 0, 0)).ToString(@"hh\:mm")) às @((drAna?.HorarioFimTarde ?? new TimeSpan(17, 0, 0)).ToString(@"hh\:mm"))
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="bi bi-calendar-week me-1"></i>
                                Atende: 
                                @{
                                    var dias = new List<string>();
                                    if (drAna?.AtendeSegunda ?? true) dias.Add("Seg");
                                    if (drAna?.AtendeTerca ?? true) dias.Add("Ter");
                                    if (drAna?.AtendeQuarta ?? true) dias.Add("Qua");
                                    if (drAna?.AtendeQuinta ?? true) dias.Add("Qui");
                                    if (drAna?.AtendeSexta ?? true) dias.Add("Sex");
                                    if (drAna?.AtendeSabado ?? false) dias.Add("Sáb");
                                    if (drAna?.AtendeDomingo ?? false) dias.Add("Dom");
                                }
                                @string.Join(", ", dias)
                            </small>
                        </div>
                    </div>
                </div>

                    <!-- Sistema PsicoPontos -->
                    <div class="card border-0 shadow-sm bg-success bg-opacity-10 mb-4">
                        <div class="card-body">
                            <h5 class="card-title text-success">
                                <i class="bi bi-star-fill me-2"></i>
                                Sistema PsicoPontos
                            </h5>
                            <p class="mb-2">A cada consulta realizada, você ganha <strong>1 PsicoPonto</strong>!</p>
                            <p class="mb-0">
                                <i class="bi bi-gift text-success me-2"></i>
                                Acumule <strong>10 PsicoPontos</strong> e ganhe <strong>1 consulta gratuita</strong>!
                            </p>
                        </div>
                    </div>

                @if (infoFallback)
                {
                    <!-- Aviso de Sistema em Configuração -->
                    <div class="alert alert-info border-0 shadow-sm">
                        <h5 class="alert-heading">
                            <i class="bi bi-info-circle me-2"></i>
                            Sistema em Configuração
                        </h5>
                        <p class="mb-0">
                            Para agendar sua consulta, entre em contato diretamente:
                        </p>
                        <div class="mt-3">
                            <p class="mb-1">
                                <i class="bi bi-whatsapp text-success me-2"></i>
                                <strong>WhatsApp:</strong> (42) 99936-9724
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-envelope text-primary me-2"></i>
                                <strong>Email:</strong> psiianasantos@psiianasantos.com.br
                            </p>
                        </div>
                    </div>
                }

                <!-- Botões de Ação -->
                <div class="d-grid gap-3">
                    @if (!infoFallback)
                    {
                        <a href="/Cliente/AgendarConsulta" class="btn btn-success btn-lg">
                            <i class="bi bi-calendar-check me-2"></i>
                            Continuar para Agendamento
                        </a>
                    }
                    else
                    {
                        <a href="https://wa.me/5542999369724?text=Olá! Gostaria de agendar uma consulta." 
                           class="btn btn-success btn-lg" target="_blank">
                            <i class="bi bi-whatsapp me-2"></i>
                            Agendar via WhatsApp
                        </a>
                    }
                    <a href="/Account/Register" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-person-plus me-2"></i>
                        Ainda não tenho conta - Cadastrar
                    </a>
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Voltar para página inicial
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
