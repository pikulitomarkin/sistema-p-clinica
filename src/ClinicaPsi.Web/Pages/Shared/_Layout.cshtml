<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Psicóloga Ana Santos | Clínica de Psicologia</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/images/favicon.svg" />
    <link rel="icon" type="image/svg+xml" sizes="32x32" href="~/images/favicon-32.svg" />
    <link rel="icon" type="image/svg+xml" sizes="192x192" href="~/images/favicon-192.svg" />
    <link rel="apple-touch-icon" sizes="192x192" href="~/images/favicon-192.svg" />
    <link rel="shortcut icon" href="~/images/favicon.svg" />
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#198754" />

    <!-- SEO Meta Tags -->
    <meta name="description" content="Psicóloga Ana Santos em Londrina - Especialista em Terapia Cognitivo-Comportamental. Atendimento presencial, online e por videochamada. Agende sua consulta." />
    <meta name="keywords" content="psicóloga londrina, psicóloga ana, psicóloga ana santos, clínica de psicologia londrina, terapia cognitivo-comportamental londrina, terapia online londrina, psicoterapia londrina" />
    <meta name="author" content="Psicóloga Ana Santos" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <link rel="canonical" href="https://www.psiianasantos.com.br/" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="language" content="Portuguese (Brazilian)" />
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />

    <!-- Open Graph (Facebook, LinkedIn) -->
    <meta property="og:title" content="Psicóloga Ana Santos - Clínica de Psicologia em Londrina" />
    <meta property="og:description" content="Atendimento psicológico especializado em Terapia Cognitivo-Comportamental. Presencial, online e por videochamada. CRP: 08/45168" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.psiianasantos.com.br/" />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:image" content="https://www.psiianasantos.com.br/images/ana-santos.jpg" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Psicóloga Ana Santos - Londrina" />
    <meta name="twitter:description" content="Psicóloga especialista em Terapia Cognitivo-Comportamental. Agende sua consulta!" />

    <!-- Schema.org LocalBusiness Structured Data -->
    <script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "LocalBusiness",
      "name": "Psicóloga Ana Santos",
      "image": "https://www.psiianasantos.com.br/images/ana-santos.jpg",
      "description": "Clínica de Psicologia especializada em Terapia Cognitivo-Comportamental em Londrina",
      "address": {
        "@@type": "PostalAddress",
        "streetAddress": "Rua Orlando Ferreina Neto, 39",
        "addressLocality": "Londrina",
        "addressRegion": "PR",
        "postalCode": "86015-140",
        "addressCountry": "BR"
      },
      "telephone": "+55 42 99936-9724",
      "url": "https://www.psiianasantos.com.br",
      "priceRange": "R$ 100 - R$ 200",
      "areaServed": ["Londrina", "Paraná", "Brasil"],
      "sameAs": [
        "https://www.facebook.com/psicologaanasantos",
        "https://www.instagram.com/psicologaanasantos",
        "https://www.whatsapp.com/message/?phone=5542999369724"
      ],
      "openingHoursSpecification": [
        {
          "@@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "18:00"
        },
        {
          "@@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "12:00"
        }
      ],
      "knowsLanguage": ["pt-BR", "en"],
      "offers": {
        "@@type": "AggregateOffer",
        "priceCurrency": "BRL",
        "priceRange": "100-200"
      },
      "aggregateRating": {
        "@@type": "AggregateRating",
        "ratingValue": "5",
        "bestRating": "5",
        "worstRating": "1"
      }
    }
    </script>

    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="ClinicaPsi.Web.styles.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-heart-fill me-2"></i>
                Psicóloga Ana Santos
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door me-1"></i>
                            Início
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" href="/Admin">
                                        <i class="bi bi-gear-fill me-2"></i>Área Admin</a></li>
                                }
                                @if (User.IsInRole("Psicologo"))
                                {
                                    <li><a class="dropdown-item" href="/Psicologo">
                                        <i class="bi bi-person-badge me-2"></i>Área Psicólogo</a></li>
                                }
                                @if (User.IsInRole("Cliente"))
                                {
                                    <li><a class="dropdown-item" href="/Cliente">
                                        <i class="bi bi-person-heart me-2"></i>Minha Área</a></li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Account/Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6><i class="bi bi-heart-fill text-success me-2"></i>PsiiAnaSantos</h6>
                    <p class="small mb-0">Psi. Ana Santos - CRP 08/45168</p>
                    <p class="small mb-0">Psicologia Clínica e Terapia</p>
                </div>
                <div class="col-md-4">
                    <h6 class="small"><i class="bi bi-geo-alt me-2"></i>Endereço</h6>
                    <p class="small mb-0">Londrina - PR</p>
                    <p class="small mb-0">Atendimento presencial e online</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <h6 class="small"><i class="bi bi-chat-dots me-2"></i>Contato</h6>
                    <p class="small mb-0">
                        <i class="bi bi-whatsapp me-1"></i>(42) 98859-3775<br>
                        <i class="bi bi-envelope me-1"></i>psiianasantos@psiianasantos.com.br
                    </p>
                </div>
            </div>
            <hr class="my-3 bg-light opacity-25">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="small mb-0 text-muted">
                        &copy; 2025 PsiiAnaSantos - Todos os direitos reservados
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
