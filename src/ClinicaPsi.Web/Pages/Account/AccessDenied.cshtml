@page
@model ClinicaPsi.Web.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Acesso Negado";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 col-lg-4 mx-auto">
            <div class="card card-modern shadow-lg">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-warning" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h2 class="gradient-text mb-3">Acesso Negado</h2>
                    
                    <p class="text-muted mb-4">
                        Você não tem permissão para acessar esta página. 
                        Verifique se você está logado com a conta correta.
                    </p>
                    
                    <div class="d-grid gap-2">
                        <a href="javascript:history.back()" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Voltar
                        </a>
                        
                        <a href="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Fazer Login
                        </a>
                        
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>
                            Página Inicial
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card-modern {
        border: none;
        border-radius: 20px;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
    }
</style>