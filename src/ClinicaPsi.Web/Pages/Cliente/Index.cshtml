@page "/cliente"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using ClinicaPsi.Shared.Models
@using ClinicaPsi.Application.Services
@inject UserManager<ApplicationUser> UserManager
@inject PacienteService PacienteService
@inject ConsultaService ConsultaService
@model ClinicaPsi.Web.Pages.Cliente.IndexModel
@attribute [Authorize(Roles = "Cliente")]
@{
    ViewData["Title"] = "Minha Área";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-page-title mb-2">
                <i class="bi bi-person-heart me-3"></i>
                Minha Área - Cliente
            </h1>
            <p class="admin-page-subtitle">
                Bem-vindo à sua área pessoal do sistema PsiiAnaSantos
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="/Cliente/AgendarConsulta" class="admin-action-btn">
                <i class="bi bi-calendar-plus"></i>
                Nova Consulta
            </a>
            <a href="/Cliente/MeuPerfil" class="admin-action-btn-secondary">
                <i class="bi bi-person-gear"></i>
                Meu Perfil
            </a>
        </div>
    </div>
</div>

<!-- PsicoPontos Banner -->
<div class="row mb-4">
    <div class="col-12">
        <div class="admin-stats-card" style="background: linear-gradient(135deg, #fff, #f0f8f0); border-left-color: #ffc107;">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="stats-icon" style="background: linear-gradient(135deg, #ffc107, #ffab00);">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="ms-3">
                        <h3 class="mb-1">Sistema PsicoPontos</h3>
                        <p class="text-muted mb-0">1 consulta = 1 ponto | 10 pontos = 1 consulta gratuita</p>
                    </div>
                </div>
                <div class="text-end">
                    <div class="stats-number" style="color: #ffab00;">@Model.PsicoPontos</div>
                    <div class="stats-label">Pontos Atuais</div>
                </div>
            </div>
            
            <!-- Barra de progresso -->
            <div class="mt-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <small class="text-muted">Progresso para próxima consulta gratuita</small>
                    <small class="text-muted">@(Model.PsicoPontos % 10)/10</small>
                </div>
                <div class="progress" style="height: 8px; background: rgba(255, 193, 7, 0.2);">
                    <div class="progress-bar" 
                         style="background: linear-gradient(135deg, #ffc107, #ffab00); width: @((Model.PsicoPontos % 10) * 10)%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-4 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stats-number">@Model.ConsultasRealizadas</div>
            <div class="stats-label">Consultas Realizadas</div>
        </div>
    </div>
    
    <div class="col-xl-4 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, #17a2b8, #138496);">
                <i class="bi bi-calendar-week"></i>
            </div>
            <div class="stats-number">@Model.ProximasConsultas.Count</div>
            <div class="stats-label">Consultas Agendadas</div>
        </div>
    </div>
    
    <div class="col-xl-4 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon" style="background: linear-gradient(135deg, #ffc107, #ffab00);">
                <i class="bi bi-gift"></i>
            </div>
            <div class="stats-number">@Model.ConsultasGratuitas</div>
            <div class="stats-label">Consultas Gratuitas</div>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="row g-4">
    <!-- Left Column - Quick Actions -->
    <div class="col-lg-8">
        <!-- Próximas Consultas -->
        <div class="admin-card mb-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-week me-2"></i>
                    Próximas Consultas
                </h5>
            </div>
            <div class="admin-card-body">
                @if (Model.ProximasConsultas?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="admin-table table table-hover">
                            <thead>
                                <tr>
                                    <th>Data/Hora</th>
                                    <th>Psicólogo</th>
                                    <th>Tipo</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var consulta in Model.ProximasConsultas)
                                {
                                    <tr>
                                        <td>
                                            <strong>@consulta.DataHorario.ToString("dd/MM/yyyy")</strong><br>
                                            <small class="text-muted">@consulta.DataHorario.ToString("HH:mm")</small>
                                        </td>
                                        <td>@consulta.Psicologo?.Nome</td>
                                        <td>
                                            @if (consulta.Tipo == TipoConsulta.Gratuita)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-star me-1"></i>Gratuita
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">Normal</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@consulta.Status</span>
                                        </td>
                                        <td>
                                            <a href="/Cliente/MinhasConsultas" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-calendar-x display-4"></i>
                        <p class="mt-3 mb-0">Nenhuma consulta agendada</p>
                        <a href="/Cliente/AgendarConsulta" class="btn btn-primary mt-2">
                            <i class="bi bi-calendar-plus"></i>
                            Agendar Nova Consulta
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Histórico de Consultas -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Histórico Recente
                </h5>
            </div>
            <div class="admin-card-body">
                @if (Model.HistoricoConsultas?.Any() == true)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var consulta in Model.HistoricoConsultas.Take(5))
                        {
                            <div class="list-group-item d-flex align-items-center">
                                <div class="me-3">
                                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-check text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Consulta com @consulta.Psicologo?.Nome</h6>
                                    <small class="text-muted">
                                        @consulta.DataHorario.ToString("dd/MM/yyyy 'às' HH:mm")
                                        @if (consulta.Tipo == TipoConsulta.Gratuita)
                                        {
                                            <span class="badge bg-warning ms-2">Gratuita</span>
                                        }
                                    </small>
                                </div>
                                <div>
                                    <span class="badge bg-success">Realizada</span>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.HistoricoConsultas.Count > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="/Cliente/Historico" class="btn btn-outline-primary btn-sm">
                                Ver Histórico Completo
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-clock-history display-6"></i>
                        <p class="mt-2 mb-0">Nenhuma consulta realizada ainda</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Right Sidebar - Patient Info -->
    <div class="col-lg-4">
        <!-- Informações do Paciente -->
        <div class="admin-card mb-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-person-badge me-2"></i>
                    Meus Dados
                </h5>
            </div>
            <div class="admin-card-body">
                @if (Model.PacienteInfo != null)
                {
                    <div class="text-center mb-3">
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-person text-white" style="font-size: 1.5rem;"></i>
                        </div>
                        <h6 class="mt-2 mb-1">@Model.PacienteInfo.Nome</h6>
                        <small class="text-muted">@Model.PacienteInfo.Email</small>
                    </div>
                    
                    <hr>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <strong class="text-primary">@Model.PacienteInfo.PsicoPontos</strong>
                            <div class="small text-muted">PsicoPontos</div>
                        </div>
                        <div class="col-6">
                            <strong class="text-success">@Model.PacienteInfo.ConsultasRealizadas</strong>
                            <div class="small text-muted">Consultas</div>
                        </div>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <a href="/Cliente/MeuPerfil" class="admin-action-btn-secondary">
                            <i class="bi bi-pencil me-1"></i>
                            Editar Perfil
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="bi bi-person-x display-6"></i>
                        <p class="mt-2 mb-0">Dados não encontrados</p>
                    </div>
                }
            </div>
        </div>

        <!-- Como Funciona o PsicoPontos -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Sistema PsicoPontos
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="d-flex align-items-start mb-3">
                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                        <i class="bi bi-1-circle text-white small"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Ganhe Pontos</h6>
                        <small class="text-muted">Cada consulta realizada = 1 ponto</small>
                    </div>
                </div>
                
                <div class="d-flex align-items-start mb-3">
                    <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                        <i class="bi bi-2-circle text-white small"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Acumule</h6>
                        <small class="text-muted">Junte 10 pontos para uma consulta gratuita</small>
                    </div>
                </div>
                
                <div class="d-flex align-items-start">
                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                        <i class="bi bi-3-circle text-white small"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Resgate</h6>
                        <small class="text-muted">Use seus pontos e agende sem custo</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Atualizar progresso dos PsicoPontos com animação
        document.addEventListener('DOMContentLoaded', function() {
            const progressBar = document.querySelector('.progress-bar');
            if (progressBar) {
                const targetWidth = progressBar.style.width;
                progressBar.style.width = '0%';
                setTimeout(function() {
                    progressBar.style.transition = 'width 1s ease-in-out';
                    progressBar.style.width = targetWidth;
                }, 500);
            }
        });
    </script>
}