@page
@model ClinicaPsi.Web.Pages.Admin.WhatsAppModel
@{
    ViewData["Title"] = "Configuração WhatsApp";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-dark fw-bold mb-1">
                <i class="bi bi-whatsapp text-success me-2"></i>
                Configuração WhatsApp Business
            </h2>
            <p class="text-muted mb-0">Configure a integração com WhatsApp Business API e Bot com IA</p>
        </div>
    </div>

    @if (Model.MensagemSucesso != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@Model.MensagemSucesso
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.MensagemErro != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.MensagemErro
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Card de Status -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold mb-4">
                        <i class="bi bi-activity me-2"></i>Status da Integração
                    </h5>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">WhatsApp API</span>
                            @if (Model.IsConfigurado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Configurado
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Não Configurado
                                </span>
                            }
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Bot com IA (OpenAI)</span>
                            @if (!string.IsNullOrEmpty(Model.OpenAIApiKey))
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Ativo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Inativo
                                </span>
                            }
                        </div>
                    </div>

                    @if (Model.IsConfigurado)
                    {
                        <hr>
                        <div class="mb-2">
                            <small class="text-muted d-block">Webhook URL:</small>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" readonly value="@Model.WebhookUrl">
                                <button class="btn btn-outline-secondary" type="button" onclick="copiarWebhook()">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted d-block">Verify Token:</small>
                            <code class="small">@Model.VerifyToken</code>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Formulário de Configuração -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success fw-bold mb-4">
                        <i class="bi bi-gear me-2"></i>Configurações da API
                    </h5>

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-phone me-1"></i>Phone Number ID *
                                </label>
                                <input type="text" class="form-control" asp-for="PhoneNumberId" required>
                                <small class="text-muted">ID do número do WhatsApp Business</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-key me-1"></i>Access Token *
                                </label>
                                <input type="password" class="form-control" asp-for="AccessToken" required>
                                <small class="text-muted">Token de acesso permanente da API</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-shield-check me-1"></i>Verify Token
                                </label>
                                <input type="text" class="form-control" asp-for="VerifyToken" placeholder="Digite um token de verificação">
                                <small class="text-muted">Token para validar o webhook</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-lock me-1"></i>App Secret
                                </label>
                                <input type="password" class="form-control" asp-for="AppSecret" placeholder="Secret do App Facebook">
                                <small class="text-muted">Usado para validar assinatura HMAC</small>
                            </div>

                            <div class="col-12 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-robot me-1"></i>OpenAI API Key (Bot com IA)
                                </label>
                                <input type="password" class="form-control" asp-for="OpenAIApiKey" placeholder="sk-...">
                                <small class="text-muted">Chave da API OpenAI para respostas inteligentes</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-2"></i>Salvar Configurações
                                </button>
                                @if (Model.IsConfigurado)
                                {
                                    <button type="submit" asp-page-handler="Testar" class="btn btn-outline-primary ms-2">
                                        <i class="bi bi-send me-2"></i>Testar Conexão
                                    </button>
                                }
                            </div>
                            @if (Model.IsConfigurado)
                            {
                                <button type="submit" asp-page-handler="Limpar" class="btn btn-outline-danger" onclick="return confirm('Tem certeza que deseja limpar todas as configurações?')">
                                    <i class="bi bi-trash me-2"></i>Limpar Configurações
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Instruções -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Como Configurar
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-success">1. Criar Conta WhatsApp Business</h6>
                            <ol class="small">
                                <li>Acesse <a href="https://business.facebook.com" target="_blank">business.facebook.com</a></li>
                                <li>Configure o WhatsApp Business API</li>
                                <li>Obtenha o Phone Number ID e Access Token</li>
                            </ol>

                            <h6 class="fw-bold text-success mt-3">2. Configurar Webhook</h6>
                            <ol class="small">
                                <li>No painel do WhatsApp Business, vá em Configurações → Webhook</li>
                                <li>Cole a URL do webhook (exibida no card de status)</li>
                                <li>Use o Verify Token configurado aqui</li>
                                <li>Inscreva-se nos eventos: <code>messages</code></li>
                            </ol>
                        </div>

                        <div class="col-md-6">
                            <h6 class="fw-bold text-success">3. Configurar OpenAI (Opcional)</h6>
                            <ol class="small">
                                <li>Crie uma conta em <a href="https://platform.openai.com" target="_blank">platform.openai.com</a></li>
                                <li>Gere uma API Key</li>
                                <li>Cole a chave no campo acima</li>
                                <li>O bot responderá automaticamente mensagens</li>
                            </ol>

                            <h6 class="fw-bold text-success mt-3">4. Funcionalidades do Bot</h6>
                            <ul class="small">
                                <li><strong>Agendar:</strong> Cliente pode agendar consultas</li>
                                <li><strong>Remarcar:</strong> Remarcar consultas existentes</li>
                                <li><strong>Cancelar:</strong> Cancelar agendamentos</li>
                                <li><strong>IA:</strong> Respostas automáticas inteligentes</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copiarWebhook() {
            const input = document.querySelector('input[readonly]');
            input.select();
            document.execCommand('copy');
            
            const btn = event.target.closest('button');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i>';
            setTimeout(() => btn.innerHTML = originalHtml, 2000);
        }
    </script>
}
