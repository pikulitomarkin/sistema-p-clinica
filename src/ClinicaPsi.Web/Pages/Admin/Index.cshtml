@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ClinicaPsi.Shared.Models
@using ClinicaPsi.Application.Services
@inject UserManager<ApplicationUser> UserManager
@inject PacienteService PacienteService
@inject ConsultaService ConsultaService
@inject PsicologoService PsicologoService
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Dashboard Administrativo";
    Layout = "_AdminLayout";
}

@{
    // Estatísticas do sistema
    var totalUsuarios = await UserManager.Users.CountAsync();
    var totalPacientes = (await PacienteService.GetAllAsync()).Count;
    var totalPsicologos = (await UserManager.GetUsersInRoleAsync("Psicologo")).Count;
    var totalConsultas = (await ConsultaService.GetAllAsync()).Count;
    
    // Próximas consultas
    var proximasConsultas = await ConsultaService.GetProximasConsultasAsync(7);
    var consultasHoje = await ConsultaService.GetConsultasHojeListAsync();
}

<!-- Page Header -->
<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-page-title mb-2">
                <i class="bi bi-speedometer2 me-3"></i>
                Dashboard Administrativo
            </h1>
            <p class="admin-page-subtitle">
                Bem-vindo ao centro de controle da clínica PsiiAnaSantos
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="admin-action-btn" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
                Atualizar
            </button>
            <a href="/admin/relatorios" class="admin-action-btn-secondary">
                <i class="bi bi-file-text"></i>
                Relatórios
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon">
                <i class="bi bi-people"></i>
            </div>
            <div class="stats-number">@totalUsuarios</div>
            <div class="stats-label">Total de Usuários</div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon">
                <i class="bi bi-person-heart"></i>
            </div>
            <div class="stats-number">@totalPacientes</div>
            <div class="stats-label">Pacientes Cadastrados</div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon">
                <i class="bi bi-person-badge"></i>
            </div>
            <div class="stats-number">@totalPsicologos</div>
            <div class="stats-label">Psicólogos Ativos</div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="admin-stats-card">
            <div class="stats-icon">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stats-number">@totalConsultas</div>
            <div class="stats-label">Total de Consultas</div>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="row g-4">
    <!-- Quick Actions -->
    <div class="col-lg-8">
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-lightning me-2"></i>
                    Ações Rápidas
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="/admin/usuarios" class="admin-action-btn w-100 justify-content-center">
                            <i class="bi bi-people"></i>
                            Gerenciar Usuários
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/consultas" class="admin-action-btn w-100 justify-content-center">
                            <i class="bi bi-calendar-plus"></i>
                            Nova Consulta
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/psicopontos" class="admin-action-btn-secondary w-100 justify-content-center">
                            <i class="bi bi-star"></i>
                            Sistema PsicoPontos
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/relatorios" class="admin-action-btn-secondary w-100 justify-content-center">
                            <i class="bi bi-graph-up"></i>
                            Relatórios
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="admin-card mt-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Atividades Recentes
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-person-plus text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Novo usuário cadastrado</h6>
                            <small class="text-muted">Sistema inicializado com usuários padrão</small>
                        </div>
                        <small class="text-muted">Hoje</small>
                    </div>
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-gear text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Sistema atualizado</h6>
                            <small class="text-muted">Layout administrativo implementado</small>
                        </div>
                        <small class="text-muted">Hoje</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right Sidebar -->
    <div class="col-lg-4">
        <!-- Today's Schedule -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-day me-2"></i>
                    Agenda de Hoje
                </h5>
            </div>
            <div class="admin-card-body">
                @if (consultasHoje?.Any() == true)
                {
                    @foreach (var consulta in consultasHoje)
                    {
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                    <i class="bi bi-clock text-white small"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@consulta.DataHorario.ToString("HH:mm")</h6>
                                <small class="text-muted">Paciente: @consulta.Paciente?.Nome</small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-3">
                        <i class="bi bi-calendar-x display-6"></i>
                        <p class="mt-2 mb-0">Nenhuma consulta agendada para hoje</p>
                    </div>
                }
            </div>
        </div>
        
        <!-- System Status -->
        <div class="admin-card mt-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-cpu me-2"></i>
                    Status do Sistema
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Banco de Dados</span>
                    <span class="badge bg-success">
                        <i class="bi bi-check-circle me-1"></i>
                        Online
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Sistema de Login</span>
                    <span class="badge bg-success">
                        <i class="bi bi-check-circle me-1"></i>
                        Ativo
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Notificações</span>
                    <span class="badge bg-warning">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        Pendente
                    </span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Backup</span>
                    <span class="badge bg-secondary">
                        <i class="bi bi-clock me-1"></i>
                        Agendado
                    </span>
                </div>
            </div>
        </div>
        
        <!-- Quick Stats -->
        <div class="admin-card mt-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-graph-up-arrow me-2"></i>
                    Estatísticas Rápidas
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4 class="text-success mb-1">@proximasConsultas?.Count()</h4>
                        <small class="text-muted">Próximas 7 dias</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-info mb-1">0</h4>
                        <small class="text-muted">PsicoPontos Ativos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
        
        // Add loading states to action buttons
        document.querySelectorAll('.admin-action-btn, .admin-action-btn-secondary').forEach(function(btn) {
            btn.addEventListener('click', function() {
                if (this.getAttribute('href') && this.getAttribute('href') !== '#') {
                    this.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Carregando...';
                }
            });
        });
    </script>
}