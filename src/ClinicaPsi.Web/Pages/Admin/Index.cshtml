@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ClinicaPsi.Shared.Models
@using ClinicaPsi.Application.Services
@inject UserManager<ApplicationUser> UserManager
@inject PacienteService PacienteService
@inject ConsultaService ConsultaService
@inject PsicologoService PsicologoService
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Dashboard Administrativo";
    Layout = "_AdminLayout";
// ...existing code...
    var consultasHoje = await ConsultaService.GetConsultasHojeListAsync();
}

<!-- Page Header -->
<div class="admin-page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-page-title mb-2">
                <i class="bi bi-speedometer2 me-3"></i>
                Dashboard Administrativo
            </h1>
            <p class="admin-page-subtitle">
                Bem-vindo ao centro de controle da clínica PsiiAnaSantos
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="admin-action-btn" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
                Atualizar
            </button>
            <a href="/admin/relatorios" class="admin-action-btn-secondary">
                <i class="bi bi-file-text"></i>
                Relatórios
            </a>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="row g-4">
    <div class="col-lg-8">
        <!-- Apenas ações rápidas e atividades recentes -->
        <div class="admin-card">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-lightning me-2"></i>
                    Ações Rápidas
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="/admin/usuarios" class="admin-action-btn w-100 justify-content-center">
                            <i class="bi bi-people"></i>
                            Gerenciar Usuários
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/consultas" class="admin-action-btn w-100 justify-content-center">
                            <i class="bi bi-calendar-plus"></i>
                            Nova Consulta
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/whatsapp" class="admin-action-btn w-100 justify-content-center" style="background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);">
                            <i class="bi bi-whatsapp"></i>
                            WhatsApp Bot
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/psicopontos" class="admin-action-btn-secondary w-100 justify-content-center">
                            <i class="bi bi-star"></i>
                            Sistema PsicoPontos
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/relatorios" class="admin-action-btn-secondary w-100 justify-content-center">
                            <i class="bi bi-graph-up"></i>
                            Relatórios
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="admin-card mt-4">
            <div class="admin-card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Atividades Recentes
                </h5>
            </div>
            <div class="admin-card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-person-plus text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Novo usuário cadastrado</h6>
                            <small class="text-muted">Sistema inicializado com usuários padrão</small>
                        </div>
                        <small class="text-muted">Hoje</small>
                    </div>
                    <div class="list-group-item d-flex align-items-center">
                        <div class="me-3">
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-gear text-white"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Sistema atualizado</h6>
                            <small class="text-muted">Layout administrativo implementado</small>
                        </div>
                        <small class="text-muted">Hoje</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 5 minutes
        setTimeout(function() {
            location.reload();
        }, 300000);
        
        // Add loading states to action buttons
        document.querySelectorAll('.admin-action-btn, .admin-action-btn-secondary').forEach(function(btn) {
            btn.addEventListener('click', function() {
                if (this.getAttribute('href') && this.getAttribute('href') !== '#') {
                    this.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Carregando...';
                }
            });
        });
    </script>
}