@page "{id:int}"
@model ClinicaPsi.Web.Pages.Admin.EditarPsicologoModel
@{
    ViewData["Title"] = "Editar Psicólogo";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admin/Psicologos">Psicólogos</a></li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="gradient-text mb-0">
        <i class="bi bi-pencil-square me-2"></i>
        Editar Psicólogo
    </h2>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card card-modern">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-person-badge me-2"></i>
                    Dados do Psicólogo
                </h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row g-3">
                        <!-- Informações Básicas -->
                        <div class="col-md-6">
                            <label asp-for="Psicologo.Nome" class="form-label">Nome Completo *</label>
                            <input asp-for="Psicologo.Nome" class="form-control" required>
                            <span asp-validation-for="Psicologo.Nome" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Psicologo.Email" class="form-label">Email *</label>
                            <input asp-for="Psicologo.Email" type="email" class="form-control" required>
                            <span asp-validation-for="Psicologo.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Psicologo.CRP" class="form-label">CRP *</label>
                            <input asp-for="Psicologo.CRP" class="form-control" placeholder="Ex: 12/123456" required>
                            <span asp-validation-for="Psicologo.CRP" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Psicologo.Telefone" class="form-label">Telefone *</label>
                            <input asp-for="Psicologo.Telefone" class="form-control" placeholder="(11) 99999-9999" required>
                            <span asp-validation-for="Psicologo.Telefone" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Psicologo.ValorConsulta" class="form-label">Valor da Consulta *</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Psicologo.ValorConsulta" type="number" step="0.01" class="form-control" required>
                            </div>
                            <span asp-validation-for="Psicologo.ValorConsulta" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="Psicologo.Ativo" class="form-check-input" type="checkbox" role="switch">
                                <label asp-for="Psicologo.Ativo" class="form-check-label">
                                    @(Model.Psicologo?.Ativo == true ? "Ativo" : "Inativo")
                                </label>
                            </div>
                        </div>

                        <!-- Especialidades -->
                        <div class="col-12">
                            <label class="form-label">Especialidades *</label>
                            <textarea asp-for="Psicologo.Especialidades" class="form-control" rows="2" 
                                      placeholder="Ex: TCC, Ansiedade, Depressão (separadas por vírgula)"></textarea>
                            <small class="text-muted">Separe as especialidades por vírgula</small>
                            <span asp-validation-for="Psicologo.Especialidades" class="text-danger"></span>
                        </div>

                        <!-- Horários de Atendimento -->
                        <div class="col-12">
                            <h6 class="mt-3 mb-3">
                                <i class="bi bi-clock me-2"></i>
                                Horários de Atendimento
                            </h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Manhã</label>
                            <div class="input-group mb-2">
                                <span class="input-group-text">De</span>
                                <input asp-for="Psicologo.HorarioInicioManha" type="time" class="form-control">
                                <span class="input-group-text">até</span>
                                <input asp-for="Psicologo.HorarioFimManha" type="time" class="form-control">
                            </div>
                            <div class="form-check">
                                <input asp-for="Psicologo.AtendeManha" class="form-check-input" type="checkbox">
                                <label asp-for="Psicologo.AtendeManha" class="form-check-label">Atende no período da manhã</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Tarde</label>
                            <div class="input-group mb-2">
                                <span class="input-group-text">De</span>
                                <input asp-for="Psicologo.HorarioInicioTarde" type="time" class="form-control">
                                <span class="input-group-text">até</span>
                                <input asp-for="Psicologo.HorarioFimTarde" type="time" class="form-control">
                            </div>
                            <div class="form-check">
                                <input asp-for="Psicologo.AtendeTarde" class="form-check-input" type="checkbox">
                                <label asp-for="Psicologo.AtendeTarde" class="form-check-label">Atende no período da tarde</label>
                            </div>
                        </div>

                        <!-- Dias de Atendimento -->
                        <div class="col-12">
                            <h6 class="mt-3 mb-3">
                                <i class="bi bi-calendar-week me-2"></i>
                                Dias de Atendimento
                            </h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeSegunda" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeSegunda" class="form-check-label">Segunda-feira</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeTerca" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeTerca" class="form-check-label">Terça-feira</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeQuarta" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeQuarta" class="form-check-label">Quarta-feira</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeQuinta" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeQuinta" class="form-check-label">Quinta-feira</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeSexta" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeSexta" class="form-check-label">Sexta-feira</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeSabado" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeSabado" class="form-check-label">Sábado</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="Psicologo.AtendeDomingo" class="form-check-input" type="checkbox">
                                        <label asp-for="Psicologo.AtendeDomingo" class="form-check-label">Domingo</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="col-12 mt-4">
                            <div class="d-flex justify-content-between">
                                <a asp-page="/Admin/Psicologos" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>
                                    Voltar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Salvar Alterações
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar com informações adicionais -->
    <div class="col-lg-4">
        <div class="card card-modern mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Data de Cadastro</small>
                    <p class="mb-0">@Model.Psicologo?.DataCadastro.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                @if (Model.Psicologo?.DataAtualizacao != null)
                {
                    <div class="mb-3">
                        <small class="text-muted">Última Atualização</small>
                        <p class="mb-0">@Model.Psicologo.DataAtualizacao?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                }
                <div>
                    <small class="text-muted">ID do Sistema</small>
                    <p class="mb-0"><code>@Model.Psicologo?.Id</code></p>
                </div>
            </div>
        </div>

        <div class="card card-modern">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-shield-check me-2"></i>
                    Conta de Acesso
                </h6>
            </div>
            <div class="card-body">
                @if (Model.UsuarioVinculado != null)
                {
                    <div class="alert alert-success mb-0">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong>Conta vinculada</strong>
                        <p class="mb-0 small mt-2">
                            Email: @Model.UsuarioVinculado.Email<br>
                            Status: @(Model.UsuarioVinculado.Ativo ? "Ativo" : "Inativo")
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Sem conta vinculada</strong>
                        <p class="mb-0 small mt-2">
                            Este psicólogo ainda não possui uma conta de acesso ao sistema.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
