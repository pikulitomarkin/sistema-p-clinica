@page "/admin/usuarios/editar/{id}"
@using Microsoft.AspNetCore.Authorization
@model ClinicaPsi.Web.Pages.Admin.Usuarios.EditarModel
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Editar Usuário - Admin";
}

<div class="container my-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin" class="text-success"><i class="bi bi-house"></i> Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/usuarios" class="text-success">Gestão de Usuários</a></li>
            <li class="breadcrumb-item active">Editar Usuário</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-success fw-bold">
                <i class="bi bi-person-gear me-2"></i>
                Editar Usuário
            </h2>
            <p class="text-muted">Altere as informações do usuário @Model.UsuarioAtual?.NomeCompleto</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Formulário -->
    <div class="modern-card">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Input.UserId" />
                
                <!-- Informações Básicas -->
                <h5 class="text-success mb-3">
                    <i class="bi bi-person-badge me-2"></i>
                    Informações Básicas
                </h5>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Input.NomeCompleto" class="form-label">Nome Completo *</label>
                        <input asp-for="Input.NomeCompleto" class="form-control" required />
                        <span asp-validation-for="Input.NomeCompleto" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Email" class="form-label">Email *</label>
                        <input asp-for="Input.Email" class="form-control" type="email" required />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="Input.TipoUsuario" class="form-label">Tipo de Usuário *</label>
                        <select asp-for="Input.TipoUsuario" class="form-select" required>
                            <option value="">Selecione...</option>
                            <option value="@TipoUsuario.Admin">Administrador</option>
                            <option value="@TipoUsuario.Psicologo">Psicólogo</option>
                            <option value="@TipoUsuario.Cliente">Cliente</option>
                        </select>
                        <span asp-validation-for="Input.TipoUsuario" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <div class="form-check form-switch mt-2">
                            <input asp-for="Input.Ativo" class="form-check-input" type="checkbox" role="switch">
                            <label class="form-check-label" asp-for="Input.Ativo">
                                Usuário Ativo
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Alterar Senha</label>
                        <div class="form-check form-switch mt-2">
                            <input id="alterarSenhaSwitch" type="checkbox" class="form-check-input" role="switch">
                            <label class="form-check-label" for="alterarSenhaSwitch">
                                Definir Nova Senha
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Seção de Nova Senha (oculta por padrão) -->
                <div id="senhaSection" style="display: none;">
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.NovaSenha" class="form-label">Nova Senha</label>
                            <input asp-for="Input.NovaSenha" class="form-control" type="password" />
                            <span asp-validation-for="Input.NovaSenha" class="text-danger small"></span>
                            <small class="text-muted">Mínimo 6 caracteres</small>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.ConfirmarSenha" class="form-label">Confirmar Senha</label>
                            <input asp-for="Input.ConfirmarSenha" class="form-control" type="password" />
                            <span asp-validation-for="Input.ConfirmarSenha" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Campos Específicos por Tipo -->
                <div id="camposCliente" style="display: @(Model.Input.TipoUsuario == TipoUsuario.Cliente ? "block" : "none");">
                    <h5 class="text-success mb-3 mt-4">
                        <i class="bi bi-person-heart me-2"></i>
                        Informações do Paciente
                    </h5>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.CPF" class="form-label">CPF</label>
                            <input asp-for="Input.CPF" class="form-control" maxlength="11" />
                            <span asp-validation-for="Input.CPF" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Telefone" class="form-label">Telefone</label>
                            <input asp-for="Input.Telefone" class="form-control" />
                            <span asp-validation-for="Input.Telefone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.DataNascimento" class="form-label">Data de Nascimento</label>
                            <input asp-for="Input.DataNascimento" class="form-control" type="date" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.Endereco" class="form-label">Endereço</label>
                            <input asp-for="Input.Endereco" class="form-control" />
                        </div>
                    </div>
                </div>

                <div id="camposPsicologo" style="display: @(Model.Input.TipoUsuario == TipoUsuario.Psicologo ? "block" : "none");">
                    <h5 class="text-success mb-3 mt-4">
                        <i class="bi bi-person-badge me-2"></i>
                        Vincular Psicólogo
                    </h5>

                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <label asp-for="Input.PsicologoId" class="form-label">Selecione o Psicólogo</label>
                            <select asp-for="Input.PsicologoId" class="form-select">
                                <option value="">Selecione um psicólogo...</option>
                                @foreach (var psi in Model.PsicologosDisponiveis)
                                {
                                    <option value="@psi.Id">@psi.Nome - CRP: @psi.CRP</option>
                                }
                            </select>
                            <span asp-validation-for="Input.PsicologoId" class="text-danger small"></span>
                            <small class="text-muted">Apenas psicólogos sem usuário vinculado estão disponíveis</small>
                        </div>
                    </div>
                </div>

                <!-- Botões -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr>
                        <div class="d-flex justify-content-between">
                            <a href="/admin/usuarios" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-modern">
                                <i class="bi bi-check-circle me-2"></i>
                                Salvar Alterações
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Toggle senha section
        document.getElementById('alterarSenhaSwitch').addEventListener('change', function() {
            document.getElementById('senhaSection').style.display = this.checked ? 'block' : 'none';
        });

        // Mostrar campos específicos baseado no tipo de usuário
        document.getElementById('Input_TipoUsuario').addEventListener('change', function() {
            const tipo = this.value;
            document.getElementById('camposCliente').style.display = tipo === '@TipoUsuario.Cliente' ? 'block' : 'none';
            document.getElementById('camposPsicologo').style.display = tipo === '@TipoUsuario.Psicologo' ? 'block' : 'none';
        });
    </script>
}
