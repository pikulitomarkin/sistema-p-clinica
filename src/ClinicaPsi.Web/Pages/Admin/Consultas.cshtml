@page
@model ClinicaPsi.Web.Pages.Admin.ConsultasModel
@{
    ViewData["Title"] = "Gestão de Consultas";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-calendar-check text-primary me-2"></i>
            Gestão de Consultas
        </h1>
        <p class="text-muted mb-0">Gerencie todas as consultas da clínica</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Cards de Estatísticas -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #0d6efd;">
                        <i class="bi bi-calendar-check-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.TotalConsultas</h5>
                        <p class="card-text text-muted mb-0">Total de Consultas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #198754;">
                        <i class="bi bi-clock-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.ConsultasAgendadas</h5>
                        <p class="card-text text-muted mb-0">Agendadas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #198754;">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.ConsultasRealizadas</h5>
                        <p class="card-text text-muted mb-0">Realizadas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #dc3545;">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.ConsultasCanceladas</h5>
                        <p class="card-text text-muted mb-0">Canceladas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cards de Faturamento -->
<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #198754;">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">R$ @Model.FaturamentoTotal.ToString("N2")</h5>
                        <p class="card-text text-muted mb-0">Faturamento Total</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #0dcaf0;">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">R$ @Model.FaturamentoMes.ToString("N2")</h5>
                        <p class="card-text text-muted mb-0">Faturamento do Mês</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-funnel me-2"></i>
            Filtros
        </h5>
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label for="BuscaNome" class="form-label">Buscar por Nome</label>
                    <input type="text" class="form-control" id="BuscaNome" name="BuscaNome" 
                           value="@Model.BuscaNome" placeholder="Paciente ou Psicólogo">
                </div>
                <div class="col-md-2 mb-3">
                    <label for="FiltroStatus" class="form-label">Status</label>
                    <select class="form-select" id="FiltroStatus" name="FiltroStatus">
                        <option value="">Todos</option>
                        <option value="@StatusConsulta.Agendada" selected="@(Model.FiltroStatus == StatusConsulta.Agendada)">Agendada</option>
                        <option value="@StatusConsulta.Confirmada" selected="@(Model.FiltroStatus == StatusConsulta.Confirmada)">Confirmada</option>
                        <option value="@StatusConsulta.Realizada" selected="@(Model.FiltroStatus == StatusConsulta.Realizada)">Realizada</option>
                        <option value="@StatusConsulta.Cancelada" selected="@(Model.FiltroStatus == StatusConsulta.Cancelada)">Cancelada</option>
                        <option value="@StatusConsulta.NoShow" selected="@(Model.FiltroStatus == StatusConsulta.NoShow)">No Show</option>
                        <option value="@StatusConsulta.Reagendada" selected="@(Model.FiltroStatus == StatusConsulta.Reagendada)">Reagendada</option>
                    </select>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="DataInicio" class="form-label">Data Início</label>
                    <input type="date" class="form-control" id="DataInicio" name="DataInicio" 
                           value="@Model.DataInicio?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2 mb-3">
                    <label for="DataFim" class="form-label">Data Fim</label>
                    <input type="date" class="form-control" id="DataFim" name="DataFim" 
                           value="@Model.DataFim?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-2"></i>
                        Filtrar
                    </button>
                    <a href="/admin/consultas" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Limpar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Listagem de Consultas -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-list me-2"></i>
            Lista de Consultas
        </h5>
        <div class="btn-group">
            <a href="?OrdenarPor=DataHorario&Direcao=@(Model.OrdenarPor == "DataHorario" && Model.Direcao == "asc" ? "desc" : "asc")" 
               class="btn btn-sm btn-outline-primary">
                <i class="bi bi-calendar me-1"></i>
                Data @(Model.OrdenarPor == "DataHorario" ? (Model.Direcao == "asc" ? "↑" : "↓") : "")
            </a>
            <a href="?OrdenarPor=Status&Direcao=@(Model.OrdenarPor == "Status" && Model.Direcao == "asc" ? "desc" : "asc")" 
               class="btn btn-sm btn-outline-primary">
                <i class="bi bi-flag me-1"></i>
                Status @(Model.OrdenarPor == "Status" ? (Model.Direcao == "asc" ? "↑" : "↓") : "")
            </a>
            <a href="?OrdenarPor=Valor&Direcao=@(Model.OrdenarPor == "Valor" && Model.Direcao == "asc" ? "desc" : "asc")" 
               class="btn btn-sm btn-outline-primary">
                <i class="bi bi-currency-dollar me-1"></i>
                Valor @(Model.OrdenarPor == "Valor" ? (Model.Direcao == "asc" ? "↑" : "↓") : "")
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Consultas.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Data/Hora</th>
                            <th>Paciente</th>
                            <th>Psicólogo</th>
                            <th>Status</th>
                            <th>Tipo</th>
                            <th class="text-end">Valor</th>
                            <th width="120">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consulta in Model.Consultas)
                        {
                            <tr>
                                <td>
                                    <div class="fw-medium">@consulta.DataHorario.ToString("dd/MM/yyyy")</div>
                                    <small class="text-muted">@consulta.DataHorario.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="fw-medium">@consulta.Paciente.Nome</div>
                                    <small class="text-muted">@consulta.Paciente.Email</small>
                                </td>
                                <td>
                                    <div class="fw-medium">@consulta.Psicologo.Nome</div>
                                    <small class="text-muted">CRP: @consulta.Psicologo.CRP</small>
                                </td>
                                <td>
                                    @switch (consulta.Status)
                                    {
                                        case StatusConsulta.Agendada:
                                            <span class="badge bg-primary">Agendada</span>
                                            break;
                                        case StatusConsulta.Confirmada:
                                            <span class="badge bg-info">Confirmada</span>
                                            break;
                                        case StatusConsulta.Realizada:
                                            <span class="badge bg-success">Realizada</span>
                                            break;
                                        case StatusConsulta.Cancelada:
                                            <span class="badge bg-danger">Cancelada</span>
                                            break;
                                        case StatusConsulta.NoShow:
                                            <span class="badge bg-warning">No Show</span>
                                            break;
                                        case StatusConsulta.Reagendada:
                                            <span class="badge bg-secondary">Reagendada</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (consulta.Tipo)
                                    {
                                        case TipoConsulta.Normal:
                                            <span class="badge bg-light text-dark">Normal</span>
                                            break;
                                        case TipoConsulta.Gratuita:
                                            <span class="badge bg-success">Gratuita</span>
                                            break;
                                        case TipoConsulta.Retorno:
                                            <span class="badge bg-info">Retorno</span>
                                            break;
                                        case TipoConsulta.Avaliacao:
                                            <span class="badge bg-warning">Avaliação</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end fw-medium">
                                    R$ @consulta.Valor.ToString("N2")
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Visualizar">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        @if (consulta.Status == StatusConsulta.Agendada)
                                        {
                                            <form method="post" class="d-inline" asp-page-handler="CancelarConsulta" asp-route-consultaId="@consulta.Id">
                                                <button type="submit" class="btn btn-outline-danger" 
                                                        onclick="return confirm('Tem certeza que deseja cancelar esta consulta?')"
                                                        data-bs-toggle="tooltip" title="Cancelar">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginação -->
            @if (Model.TotalPaginas > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Navegação de páginas">
                        <ul class="pagination pagination-sm justify-content-center mb-0">
                            @if (Model.PaginaAtual > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?PaginaAtual=@(Model.PaginaAtual - 1)&BuscaNome=@Model.BuscaNome&FiltroStatus=@Model.FiltroStatus&DataInicio=@Model.DataInicio&DataFim=@Model.DataFim&OrdenarPor=@Model.OrdenarPor&Direcao=@Model.Direcao">Anterior</a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PaginaAtual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaAtual + 2); i++)
                            {
                                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                                    <a class="page-link" href="?PaginaAtual=@i&BuscaNome=@Model.BuscaNome&FiltroStatus=@Model.FiltroStatus&DataInicio=@Model.DataInicio&DataFim=@Model.DataFim&OrdenarPor=@Model.OrdenarPor&Direcao=@Model.Direcao">@i</a>
                                </li>
                            }

                            @if (Model.PaginaAtual < Model.TotalPaginas)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?PaginaAtual=@(Model.PaginaAtual + 1)&BuscaNome=@Model.BuscaNome&FiltroStatus=@Model.FiltroStatus&DataInicio=@Model.DataInicio&DataFim=@Model.DataFim&OrdenarPor=@Model.OrdenarPor&Direcao=@Model.Direcao">Próximo</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma consulta encontrada</h5>
                <p class="text-muted">Não há consultas com os filtros selecionados.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}