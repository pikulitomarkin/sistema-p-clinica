@page
@model ClinicaPsi.Web.Pages.Admin.PsicoPontosModel
@{
    ViewData["Title"] = "Sistema PsicoPontos";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="bi bi-star text-warning me-2"></i>
            Sistema PsicoPontos
        </h1>
        <p class="text-muted mb-0">Gerencie o sistema de gamificação da clínica</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Cards de Estatísticas -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #0d6efd;">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.TotalPacientesAtivos</h5>
                        <p class="card-text text-muted mb-0">Pacientes Ativos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #ffc107;">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.QtdPacientesComPontos</h5>
                        <p class="card-text text-muted mb-0">Com Pontos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #198754;">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.TotalPontosDistribuidos</h5>
                        <p class="card-text text-muted mb-0">Total de Pontos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="translucent-icon me-3" style="color: #dc3545;">
                        <i class="bi bi-gift-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@Model.ConsultasGratuitasDisponiveis</h5>
                        <p class="card-text text-muted mb-0">Consultas Disponíveis</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card de Informações do Sistema -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Como Funciona o Sistema PsicoPontos
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6><i class="bi bi-award text-primary me-2"></i>Ganho de Pontos</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success me-2"></i>1 ponto por consulta realizada</li>
                    <li><i class="bi bi-check-circle text-success me-2"></i>Bonificações especiais pelo admin</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6><i class="bi bi-gift text-warning me-2"></i>Troca de Pontos</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-star text-warning me-2"></i>10 pontos = 1 consulta gratuita</li>
                    <li><i class="bi bi-star text-warning me-2"></i>Incentiva continuidade do tratamento</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-funnel me-2"></i>
            Filtros
        </h5>
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="BuscaNome" class="form-label">Buscar Paciente</label>
                    <input type="text" class="form-control" id="BuscaNome" name="BuscaNome" 
                           value="@Model.BuscaNome" placeholder="Nome ou email">
                </div>
                <div class="col-md-3 mb-3">
                    <label for="FiltroMinPontos" class="form-label">Mínimo de Pontos</label>
                    <input type="number" class="form-control" id="FiltroMinPontos" name="FiltroMinPontos" 
                           value="@Model.FiltroMinPontos" min="0">
                </div>
                <div class="col-md-5 mb-3">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-2"></i>
                        Filtrar
                    </button>
                    <a href="/admin/psicopontos" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Limpar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <!-- Lista de Pacientes -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list me-2"></i>
                    Pacientes e Pontos
                </h5>
                <div class="btn-group">
                    <a href="?OrdenarPor=pontos&Direcao=@(Model.OrdenarPor == "pontos" && Model.Direcao == "asc" ? "desc" : "asc")" 
                       class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-star me-1"></i>
                        Pontos @(Model.OrdenarPor == "pontos" ? (Model.Direcao == "asc" ? "↑" : "↓") : "")
                    </a>
                    <a href="?OrdenarPor=nome&Direcao=@(Model.OrdenarPor == "nome" && Model.Direcao == "asc" ? "desc" : "asc")" 
                       class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-person me-1"></i>
                        Nome @(Model.OrdenarPor == "nome" ? (Model.Direcao == "asc" ? "↑" : "↓") : "")
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.PacientesLista.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Paciente</th>
                                    <th class="text-center">Pontos</th>
                                    <th class="text-center">Consultas</th>
                                    <th class="text-center">Gratuitas</th>
                                    <th width="150">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var paciente in Model.PacientesLista)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-medium">@paciente.Nome</div>
                                            <small class="text-muted">@paciente.Email</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="bi bi-star-fill me-1"></i>
                                                @paciente.PsicoPontos
                                            </span>
                                            @if (paciente.ConsultasGratuitasDisponiveis > 0)
                                            {
                                                <div class="small text-success mt-1">
                                                    @paciente.ConsultasGratuitasDisponiveis consulta(s) disponível(is)
                                                </div>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@paciente.ConsultasRealizadas</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-success">@paciente.ConsultasGratuitas</span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button type="button" class="btn btn-outline-success" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalAdicionarPontos"
                                                        data-paciente-id="@paciente.Id"
                                                        data-paciente-nome="@paciente.Nome"
                                                        title="Adicionar Pontos">
                                                    <i class="bi bi-plus-circle"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalRemoverPontos"
                                                        data-paciente-id="@paciente.Id"
                                                        data-paciente-nome="@paciente.Nome"
                                                        data-paciente-pontos="@paciente.PsicoPontos"
                                                        title="Remover Pontos">
                                                    <i class="bi bi-dash-circle"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-star text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-muted">Nenhum paciente encontrado</h5>
                        <p class="text-muted">Não há pacientes com os filtros selecionados.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Histórico Recente -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Movimentações Recentes
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.HistoricoRecente.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var item in Model.HistoricoRecente)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    @if (item.TipoMovimentacao == TipoMovimentacaoPontos.Ganho || item.TipoMovimentacao == TipoMovimentacaoPontos.Bonus)
                                    {
                                        <div class="translucent-icon me-3" style="color: #198754; font-size: 1rem;">
                                            <i class="bi bi-plus-circle-fill"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="translucent-icon me-3" style="color: #dc3545; font-size: 1rem;">
                                            <i class="bi bi-dash-circle-fill"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="fw-medium">@item.Paciente.Nome</div>
                                        <small class="text-muted">
                                            @(item.TipoMovimentacao == TipoMovimentacaoPontos.Uso ? item.PontosAlterados : "+" + item.PontosAlterados) pontos
                                            • @item.DataMovimentacao.ToString("dd/MM HH:mm")
                                        </small>
                                        @if (!string.IsNullOrWhiteSpace(item.Motivo))
                                        {
                                            <div class="small text-muted mt-1">@item.Motivo</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-clock text-muted" style="font-size: 2rem;"></i>
                        <p class="text-muted mt-2 mb-0">Nenhuma movimentação recente</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Adicionar Pontos -->
<div class="modal fade" id="modalAdicionarPontos" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AdicionarPontos">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle text-success me-2"></i>
                        Adicionar Pontos
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="pacienteId" id="adicionarPacienteId">
                    <div class="mb-3">
                        <label class="form-label">Paciente</label>
                        <input type="text" class="form-control" id="adicionarPacienteNome" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="adicionarPontos" class="form-label">Quantidade de Pontos</label>
                        <input type="number" class="form-control" name="pontos" id="adicionarPontos" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="adicionarMotivo" class="form-label">Motivo</label>
                        <textarea class="form-control" name="motivo" id="adicionarMotivo" rows="3" 
                                  placeholder="Ex: Bonificação especial, participação em evento..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>
                        Adicionar Pontos
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Remover Pontos -->
<div class="modal fade" id="modalRemoverPontos" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="RemoverPontos">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-dash-circle text-danger me-2"></i>
                        Remover Pontos
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="pacienteId" id="removerPacienteId">
                    <div class="mb-3">
                        <label class="form-label">Paciente</label>
                        <input type="text" class="form-control" id="removerPacienteNome" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Pontos Atuais</label>
                        <input type="text" class="form-control" id="removerPontosAtuais" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="removerPontos" class="form-label">Quantidade a Remover</label>
                        <input type="number" class="form-control" name="pontos" id="removerPontos" min="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="removerMotivo" class="form-label">Motivo</label>
                        <textarea class="form-control" name="motivo" id="removerMotivo" rows="3" 
                                  placeholder="Ex: Correção de erro, penalidade..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-dash-circle me-2"></i>
                        Remover Pontos
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal Adicionar Pontos
        document.getElementById('modalAdicionarPontos').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var pacienteId = button.getAttribute('data-paciente-id');
            var pacienteNome = button.getAttribute('data-paciente-nome');
            
            document.getElementById('adicionarPacienteId').value = pacienteId;
            document.getElementById('adicionarPacienteNome').value = pacienteNome;
            document.getElementById('adicionarPontos').value = '';
            document.getElementById('adicionarMotivo').value = '';
        });

        // Modal Remover Pontos
        document.getElementById('modalRemoverPontos').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var pacienteId = button.getAttribute('data-paciente-id');
            var pacienteNome = button.getAttribute('data-paciente-nome');
            var pacientePontos = button.getAttribute('data-paciente-pontos');
            
            document.getElementById('removerPacienteId').value = pacienteId;
            document.getElementById('removerPacienteNome').value = pacienteNome;
            document.getElementById('removerPontosAtuais').value = pacientePontos + ' pontos';
            document.getElementById('removerPontos').value = '';
            document.getElementById('removerPontos').max = pacientePontos;
            document.getElementById('removerMotivo').value = '';
        });
    </script>
}