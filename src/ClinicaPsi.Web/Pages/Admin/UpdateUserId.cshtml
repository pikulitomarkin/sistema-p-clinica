@page "/admin/update-userid"
@using ClinicaPsi.Web.Pages.Admin
@model UpdateUserIdModel
@{
    ViewData["Title"] = "Atualizar UserId do Psicólogo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header @(Model.Success == true ? "bg-success" : Model.Success == false ? "bg-danger" : "bg-primary") text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-database-gear me-2"></i>
                        @ViewData["Title"]
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model.ResultMessage != null)
                    {
                        <div class="alert @(Model.Success ? "alert-success" : "alert-danger") border-0 shadow-sm">
                            <pre class="mb-0" style="white-space: pre-wrap; font-family: 'Courier New', monospace; font-size: 0.9rem;">@Model.ResultMessage</pre>
                        </div>

                        @if (Model.Success)
                        {
                            <div class="d-flex gap-2 mt-3">
                                <a href="/prontuario" class="btn btn-primary">
                                    <i class="bi bi-file-earmark-medical me-2"></i>
                                    Ir para Prontuários
                                </a>
                                <a href="/prontuario/cadastro" class="btn btn-success">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Criar Novo Prontuário
                                </a>
                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="bi bi-house me-2"></i>
                                    Voltar ao Início
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="mt-3">
                                <button onclick="location.reload()" class="btn btn-warning">
                                    <i class="bi bi-arrow-clockwise me-2"></i>
                                    Tentar Novamente
                                </button>
                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="bi bi-house me-2"></i>
                                    Voltar ao Início
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Carregando dados...
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        O que este script faz?
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Busca todos os psicólogos cadastrados na tabela <code>Psicologos</code>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Busca todos os usuários na tabela <code>AspNetUsers</code>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Vincula cada psicólogo ao usuário correspondente baseado no <strong>email</strong>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Atualiza o campo <code>UserId</code> na tabela <code>Psicologos</code>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            Permite filtrar prontuários por psicólogo automaticamente
                        </li>
                    </ul>

                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-shield-exclamation me-2"></i>
                        <strong>Segurança:</strong> Esta página só pode ser acessada por administradores. 
                        Após executar com sucesso, considere remover este arquivo do projeto.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    pre {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.5rem;
        max-height: 600px;
        overflow-y: auto;
    }
</style>
